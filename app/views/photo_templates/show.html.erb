<h1>Photo Details</h1>

<dl>
<% @matching_photo.each do | a_photo | %>
<dt>Image</dt>
<dd><image src="<%= a_photo.image %>"></dd>

<dt>Caption</dt>
<dd><%= a_photo.caption %></dd>

<dt>Owner</dt>
<dd><%= a_photo.poster.username %></dd>

<dt>Posted</dt>
<dd><%= a_photo.created_at %></dd>

<dt>Edit Photo</dt>
<dd>
  <form action="/photos/<%= a_photo.id %>" method="post">

    <label for="browser_image">Image</label>
    <input type="text" id="browser_image" name="image" placeholder="Enter a URL for the image..." value="<%= a_photo.image %>">

    <label for="browser_caption">Caption</label>
    <textarea name="caption" id="browser_caption" type="text" placeholder="Enter a caption for the photo..." "><%= a_photo.caption %></textarea>

    <button>Update photo</button>
  </form>
</dd>

<dt>Delete Photo</dt>
<dd><a href="/photo/destroy">Delete this photo</a></dd>
<% end %>
</dl>

