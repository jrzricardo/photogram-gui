<h1>Photo Details</h1>

<dl>
<% @matching_photo.each do | a_photo | %>

<dt>Image</dt>
<dd><image src="<%= a_photo.image %>"></dd>

<dt>Caption</dt>
<dd><%= a_photo.caption %></dd>

<dt>Owner</dt>
<dd><%= a_photo.poster.username %></dd>

<dt>Posted</dt>
<dd><%= a_photo.created_at %></dd>

<dt>Edit photo</dt>
<dd>
  <form action="/update_photo" method="post">
    <input type="hidden" name="query_photo_id" value=<%= a_photo.id %>>
    <label for="browser_image">Image</label>
    <input type="text" id="browser_image" name="query_image" placeholder="Enter a URL for the image..." value="<%= a_photo.image %>">

    <label for="browser_caption">Caption</label>
    <textarea name="query_caption" id="browser_caption" type="text" placeholder="Enter a caption for the photo..." "><%= a_photo.caption %></textarea>

    <button>Update photo</button>
  </form>
</dd>

<dt>Delete photo</dt>
<dd>
  <a href="/delete_photo/<%= @the_photo.id %>">Delete this photo</a>
</dd>
<% end %>
</dl>

<h2>Comments</h2>

<table>
  
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do | a_comment | %>
  <tr>
    <td><%= a_comment.commenter.username %></td>
    <td><%= a_comment.body %></td>
    <td><%= a_comment.created_at %></td>

  </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>
<form action="/add_comment/" method="post">

  <label for="browser_photo_id">Photo ID</label>
  <input type="text" id="browser_photo_id" name="query_photo_id" placeholder="Enter the photo ID" value=<%= @the_photo.id %>>

  <label for="browser_author_id">Author ID</label>
  <input type="text" id="browser_author_id" name="query_author_id" placeholder="Enter your author ID"]>

  <label for="browser_comment">Comment</label>
  <textarea name="query_comment" id="browser_comment" type="text" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
