<h1>List of users</h1>
<form action="/add_user/" method="post">
<label for="browser_new_user">Username</label>
<input type="text" input_id="browser_new_user" name="query_new_user" placeholder="Enter a username...">
<button>Add user</button>

<hr>

</form>
<table border= 1>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th></th>
  </tr>

  <% @list_of_users.each do | a_user | %>
    <tr>
      <td>
        <%= a_user.id %>
      </td>

      <td>
        <%= a_user.username %>
      </td>

      <td>
        <a href="/users/<%= a_user.username %>">Show details</a>
      </td>
    </tr>

  <% end %>
</table>
